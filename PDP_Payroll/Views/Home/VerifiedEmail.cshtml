@model string
@{
    ViewBag.Title = "VerifiedEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="parallax light-wrapper parallax4">
    <div class="container inner text-center">
        <div class="thin">
            <div class="carousel-wrapper">

                <h3 class="main-title">Verify Email</h3>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-container">
                        <div class="row ">
                            <div class="col-md-12 hidden">
                                <input class="form-control text-box single-line" id="password" name="Email" placeholder="Email" style="width:50%" type="text" value="@Model">
                               
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3"></div>
                                <div class="col-md-6">
                                    <input class="form-control text-box single-line" id="password" name="VerificationCode" placeholder="VerificationCode"  type="text" value="@ViewBag.VerificationCode">
                                    <span class="error error-CPassword" style="color:red;"><br />@ViewBag.VerificationCodeError</span>
                                    </div>
                                    <div class="col-md-3"></div>
                                </div>
                            <br />
                            <input type="submit" value="Verify Account" id="submit" class="btn btn-default" style="width:48%" />
                            <br/>
                            @Html.ActionLink("Resend Verification Code", "ResendVerificationCode",new { Email=Model})
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
