@model IEnumerable<PDP_Payroll.Models.EmployeeModel>

@{
    ViewBag.Title = "EmployeeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    @if (TempData["Alert"] != null)
    {
        <text>alert('@TempData["Alert"]');</text>
        TempData["Alert"] = null;
    }
</script>
<br />
<br />
<br />
<br />
<div class="parallax light-wrapper parallax4">
    <div class="container inner ">
        <div class="thin">
            <div class="carousel-wrapper">
                <h3 class="main-title">Employees</h3>
                <p>
                    @Html.ActionLink("Add Employee", "EmployeeEdit")
                </p></p>
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    Branch
                                </th>
                                <th>
                                   State
                                </th>                               
                                <th>
                                    Employee Name
                                </th> 
                                <th>
                                   Phone no
                                </th>
                                
                                <th>
                                    NIC
                                </th>
                                <th>
                                   Martial Status
                                </th> 
                                                             
                                <th>
                                    Wages(Hourly)
                                </th>
                                <th>Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.branch.branch_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.state.state_name)
                                    </td>                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.employee_name)

                                        @Html.DisplayFor(modelItem => item.employee_Fathername)
                                    </td>
                                    
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.employee_phoneNo)
                                    </td>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.employee_NIC)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.employee_MartialStatus)
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.employee_Wages)$
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "EmployeeEdit", new { id = item.employee_id }) |
                                        @Html.ActionLink("Details", "EmployeeDetail", new { id = item.employee_id }) |
                                        @Html.ActionLink("Delete", "EmployeeDelete", new { id = item.employee_id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
