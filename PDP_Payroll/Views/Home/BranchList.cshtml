@model IEnumerable<PDP_Payroll.Models.BranchModel>

@{
    ViewBag.Title = "BranchList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    @if (TempData["Alert"] != null)
    {
        <text>alert('@TempData["Alert"]');</text>
        TempData["Alert"] = null;
    }
</script>
<br />
<br />
<div class="parallax light-wrapper parallax4">
    <div class="container inner ">
        <div class="thin">
            <div class="carousel-wrapper">
                <h3 class="main-title">Branches</h3>
                <p>
                    @Html.ActionLink("Add Branch", "BranchEdit")
                </p>
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    State
                                </th>

                                <th>
                                    Branch Name
                                </th>
                                <th>
                                    Branch address
                                </th>
                                <th>
                                    Branch Phone
                                </th>
                                <th>
                                    Branch Email
                                </th>
                                <th>Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.State.state_name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.branch_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.branch_address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.branch_phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.branch_email)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "BranchEdit", new { id = item.branch_id }) |
                                        @Html.ActionLink("Details", "BranchView", new { id = item.branch_id }) |
                                        @Html.ActionLink("Delete", "BranchDelete", new { id = item.branch_id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
